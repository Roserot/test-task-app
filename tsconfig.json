{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist",

    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",

    "strict": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],

    "paths": {
      "@root/*": ["./*"],

      "@app/*": ["app/*"],
      "@lib/*": ["lib/*"],
      "@configs/*": ["configs/*"],
      "@components/*": ["components/*"],

      "@variables": ["app/scss/_variables.scss"],
      "@mixins": ["app/scss/_mixins.scss"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
